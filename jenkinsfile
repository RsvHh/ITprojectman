pipeline {
    agent any

    stages {
        stage('Checkout') {
            steps {
                git branch: 'main', url: 'https://github.com/ITprojectman.git'
            }
        }

        stage('Install dependencies') {
            steps {
                sh 'pip install -r requirements.txt'
            }
        }

        stage('Run tests') {
            steps {
                sh 'python run_project.py test'
            }
        }

        stage('Build Docker Image') {
            steps {
                sh 'docker build -t gym-management .'
            }
        }

        stage('Run Django Server') {
            steps {
                sh 'docker run -d -p 8001:8000 gym-management'
            }
        }
    }
}
