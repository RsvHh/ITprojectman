pipeline {
    agent any

    stages {
        stage('Checkout') {
            steps {
                git branch: 'main', url: 'https://github.com/RsvHh/ITprojectman.git'
            }
        }

        stage('Run Tests') {
            steps {
                sh 'python3 run_project.py test'
            }
        }

        stage('Run Django Server') {
            steps {
                sh 'python3 manage.py runserver 0.0.0.0:8000'
            }
        }
    }
}
